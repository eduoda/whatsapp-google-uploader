# WhatsApp Google Uploader - Development Dockerfile
# AIDEV-NOTE: docker-dev; development container with hot reload

FROM node:18-alpine

# Install development tools
RUN apk add --no-cache \
    sqlite \
    sqlite-dev \
    python3 \
    make \
    g++ \
    git \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY lerna.json ./
COPY tsconfig.json ./

# Install all dependencies (including dev)
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S uploader && \
    adduser -S uploader -u 1001

# Create directories for development
RUN mkdir -p /data/progress /data/logs /data/config && \
    chown -R uploader:uploader /data /app

# Switch to non-root user
USER uploader

# Set development environment
ENV NODE_ENV=development
ENV DATA_DIR=/data
ENV LOG_LEVEL=debug

# Expose volume for development data
VOLUME ["/data", "/app"]

# Default development command
CMD ["npm", "run", "dev"]