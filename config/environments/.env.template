# WhatsApp Google Uploader Environment Configuration Template
# AIDEV-NOTE: env-template; secure environment variable template

# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control

# Application Environment
NODE_ENV=development
LOG_LEVEL=info

# Google API Credentials
# Get these from Google Cloud Console after enabling APIs
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# Data Storage Paths
DATA_DIR=~/.whatsapp-uploader
WHATSAPP_DIR=/storage/emulated/0/WhatsApp
DATABASE_PATH=${DATA_DIR}/uploader.db
TOKEN_PATH=${DATA_DIR}/tokens.json
LOG_PATH=${DATA_DIR}/logs

# Upload Configuration
DEFAULT_BATCH_SIZE=10
DEFAULT_CONCURRENT_UPLOADS=3
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_DELAY=1000

# Security Configuration
ENCRYPT_TOKENS=true
TOKEN_ENCRYPTION_KEY=generate_random_32_char_key_here

# Performance Configuration  
STREAM_CHUNK_SIZE=65536
MAX_MEMORY_USAGE=256
ENABLE_COMPRESSION=true

# Debug and Development
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_GOOGLE_APIS=false
DRY_RUN_DEFAULT=false

# Platform Specific Settings (uncomment as needed)
# For Termux/Android:
# WHATSAPP_DIR=/storage/emulated/0/WhatsApp/Media
# DATA_DIR=/data/data/com.termux/files/home/.whatsapp-uploader

# For Windows:
# WHATSAPP_DIR=%USERPROFILE%/Documents/WhatsApp
# DATA_DIR=%APPDATA%/whatsapp-uploader

# For macOS:
# WHATSAPP_DIR=~/Documents/WhatsApp
# DATA_DIR=~/Library/Application Support/whatsapp-uploader

# For Linux:
# WHATSAPP_DIR=~/WhatsApp
# DATA_DIR=~/.local/share/whatsapp-uploader