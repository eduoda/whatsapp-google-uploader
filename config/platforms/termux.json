{
  "name": "Android/Termux",
  "platform": "android",
  "description": "Configuration for Android devices running Termux",
  "paths": {
    "whatsapp": "/storage/emulated/0/WhatsApp/Media",
    "data": "/data/data/com.termux/files/home/.whatsapp-uploader",
    "logs": "/data/data/com.termux/files/home/.whatsapp-uploader/logs",
    "cache": "/data/data/com.termux/files/home/.cache/whatsapp-uploader"
  },
  "permissions": {
    "storage": "termux-setup-storage",
    "required": ["READ_EXTERNAL_STORAGE"],
    "notes": "Run 'termux-setup-storage' to access /storage/emulated/0/"
  },
  "environment": {
    "NODE_ENV": "production",
    "LOG_LEVEL": "info",
    "STREAM_CHUNK_SIZE": 32768,
    "MAX_MEMORY_USAGE": 128,
    "DEFAULT_BATCH_SIZE": 5,
    "DEFAULT_CONCURRENT_UPLOADS": 2
  },
  "optimizations": {
    "lowMemoryMode": true,
    "reducedConcurrency": true,
    "batteryOptimized": true
  }
}