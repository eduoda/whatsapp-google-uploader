{
  "name": "whatsapp-google-uploader",
  "version": "1.0.0",
  "description": "Production-ready CLI application for uploading WhatsApp media to Google Photos and Google Drive",
  "main": "./apps/cli/dist/index.js",
  "bin": {
    "whatsapp-uploader": "./apps/cli/dist/bin/cli.js"
  },
  "scripts": {
    "build": "npm run build:packages && npm run build:cli",
    "build:packages": "lerna run build --stream",
    "build:cli": "npm run build --workspace=apps/cli",
    "dev": "npm run dev --workspace=apps/cli",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:oauth": "ts-node scripts/test-oauth.ts",
    "test:drive": "ts-node scripts/test-drive.ts",
    "test:photos": "ts-node scripts/test-photos.ts",
    "test:scanner": "ts-node scripts/test-scanner.ts 2>/dev/null || node scripts/test-scanner.js",
    "setup:termux": "bash scripts/setup-termux.sh",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage .nyc_output",
    "clean:all": "npm run clean && lerna run clean --stream",
    "prepare": "husky install",
    "postinstall": "npm run build:packages",
    "setup": "node scripts/setup.js",
    "check": "node scripts/check.js",
    "scan": "node apps/cli/dist/bin/cli.js scan",
    "upload": "node apps/cli/dist/bin/cli.js upload"
  },
  "keywords": [
    "whatsapp",
    "google-photos",
    "google-drive",
    "backup",
    "media",
    "uploader",
    "cli",
    "nodejs"
  ],
  "author": "WhatsApp Google Uploader",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/whatsapp-google-uploader.git"
  },
  "bugs": {
    "url": "https://github.com/user/whatsapp-google-uploader/issues"
  },
  "homepage": "https://github.com/user/whatsapp-google-uploader#readme",
  "workspaces": [
    "packages/*",
    "apps/*",
    "shared/*"
  ],
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.1",
    "inquirer": "^9.2.10",
    "joi": "^17.10.1",
    "mime-types": "^2.1.35",
    "ora": "^7.0.1",
    "progress": "^2.0.3",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.4",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "fast-check": "^4.3.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lerna": "^7.2.0",
    "lint-staged": "^14.0.1",
    "nock": "^14.0.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
