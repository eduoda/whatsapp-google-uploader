{
  "name": "whatsapp-google-uploader",
  "version": "1.0.0",
  "description": "Production-ready CLI application for uploading WhatsApp media to Google Photos and Google Drive",
  "main": "./dist/index.js",
  "bin": {
    "whatsapp-uploader": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:scanner": "node scripts/test-scanner-simple.js",
    "setup:termux": "bash scripts/setup-termux.sh",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage .nyc_output",
    "setup": "node scripts/setup.js",
    "check": "node scripts/check.js",
    "scan": "node dist/cli.js scan",
    "upload": "node dist/cli.js upload"
  },
  "keywords": [
    "whatsapp",
    "google-photos",
    "google-drive",
    "backup",
    "media",
    "uploader",
    "cli",
    "nodejs"
  ],
  "author": "WhatsApp Google Uploader",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/whatsapp-google-uploader.git"
  },
  "bugs": {
    "url": "https://github.com/user/whatsapp-google-uploader/issues"
  },
  "homepage": "https://github.com/user/whatsapp-google-uploader#readme",
  "dependencies": {
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.4",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-node": "^11.1.0",
    "fast-check": "^4.3.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.1",
    "nock": "^14.0.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
